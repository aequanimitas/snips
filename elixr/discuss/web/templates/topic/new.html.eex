<%= form_for @changeset, topic_path(@conn, :create), fn f -> %>
  <h4>Hello!</h4>
  <div class="form-group">
    <%= text_input f, :title, placeholder: "Title", class: "form-control frm-ctrl" %> 
    <%= error_tag f, :title %>
  </div>
  <%= submit "Save Topic", class: "btn btn-primary" %>
<% end %>
